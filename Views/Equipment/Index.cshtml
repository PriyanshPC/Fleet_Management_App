@{
    ViewData["Title"] = "Equipment";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Equipment</h3>
    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-1"></i>Add Equipment</a>
        <input class="form-control" placeholder="Filter by name/type…" style="max-width: 280px;" />
    </div>
</div>
<div class="table-responsive card shadow-sm">
    <table class="table table-hover mb-0">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Type</th>
                <th>Tracking ID</th>
                <th>Availability</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Survey Drone X5</td>
                <td>Drone</td>
                <td>Quadcopter</td>
                <td>DRN-X5-001</td>
                <td><span class="badge text-bg-success">Available</span></td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="1">Details</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
